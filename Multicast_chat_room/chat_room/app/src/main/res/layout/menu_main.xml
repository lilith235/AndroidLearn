<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/bgimg"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="360dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:scrollbars="vertical"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="30"

        android:text=" " />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/sayText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"

        android:background="@drawable/edittext_style"
        android:textColor="#000000" />

        <Button
            android:id="@+id/sendbtn"

            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_drawable"

            android:baselineAligned="false"
            android:onClick="onClick_send"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="30"
            android:text="发送"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@drawable/button_font_style"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/beginbtn"

            android:layout_width="170dp"
            android:layout_height="60dp"

            android:layout_below="@+id/sayText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/button_drawable"

            android:baselineAligned="false"
            android:onClick="onClick_begin"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="30"
            android:text="进入聊天室"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@drawable/button_font_style"
            android:visibility="visible" />

        <Button
            android:id="@+id/overbtn"

            android:layout_width="170dp"
            android:layout_height="60dp"

            android:layout_below="@+id/sayText"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/button_drawable"

            android:baselineAligned="false"
            android:onClick="onClick_over"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="30"
            android:text="退出聊天室"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@drawable/button_font_style"
            android:visibility="visible" />



    </LinearLayout>

</LinearLayout>