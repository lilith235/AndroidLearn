<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgimg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/bgimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/quitbtn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginEnd="84dp"

            android:layout_marginRight="84dp"
            android:layout_marginBottom="230dp"
            android:background="@drawable/button_drawable"
            android:onClick="onClick_quit"

            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"

            android:shadowRadius="30"
            android:text="退出"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@drawable/button_font_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/startbtn"

            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_drawable"


            android:onClick="onClick_start"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="30"
            android:text="进入"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@drawable/button_font_style"
            app:layout_constraintBottom_toTopOf="@+id/quitbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="119dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/startbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/nameicon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="在您开启聊天室之前，请确保您所要连接的服务器已经启动"
            android:textColor="#6EC4CE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quitbtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>